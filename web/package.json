{
  "name": "web-react-tools-config",
  "version": "1.0.0",
  "description": "eslint, prettier and ts configs to help you code faster",
  "main": "index.js",
  "husky": {
    "hooks": {
        "pre-commit": "yarn hook"
    }
  },
  "scripts": {
    "test": "test",
    "format": "prettier --write src/**/*.ts{,x}",
    "lint": "tsc --noEmit && eslint . --ext .ts,.tsx",
    "hook": "yarn lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robipop22/react-tools-config.git"
  },
  "keywords": [
    "react",
    "tools",
    "eslint",
    "prettier",
    "typescript",
    "config"
  ],
  "author": "robipop22",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robipop22/react-tools-config/issues"
  },
  "homepage": "https://github.com/robipop22/react-tools-config#readme",
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.6.0",
    "prettier": "^2.3.0",
    "typescript": "4.3.2",
    "husky": "4.2.5"
  }
}
